
<%= simple_form_for @beer, :html => { :multipart => true} do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
<%= f.file_field :beer_img %>
    <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :style %>
  <%= f.input :ABV %>
  <%= f.input :company %>
  <%= f.input :lat %>
  <%= f.input :long %>
  <%= f.button :submit, :class => 'btn-custom2' %>

<% end %>
