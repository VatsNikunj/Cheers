<div class="col-md-6 col-md-offset-3">
  <div class="edit-beer-form">

    <h1>Edit Beer</h1>

    <%= simple_form_for @beer, :html => { :multipart => true} do |f| %>
      <%= f.select :category_id, @categories %>
      <%= f.file_field :beer_img %>
      <%= f.input :name, label: "Beer Name" %>
      <%= f.input :description %>
      <%= f.input :style %>
      <%= f.input :ABV %>
      <%= f.input :company %>
      <%= f.input :lat %>
      <%= f.input :long %>
      <%= f.button :submit, :class => 'btn-custom2' %>

    <% end %>
  </div>
</div>
